.post
  max-width: 800px
  margin: 0em auto 1em
  padding: post-padding
  background-color: #fff
  border-bottom: 1px solid color-border
  font-size: font-size
  .post-content
    p:first-child
      margin: 10px 0
      font-size: 12px
  .post-meta
    font-size: 12px
  .share_style
    display: flex
    div
      padding-top: 5px;
    img
      display: inline-block
      margin: 0 10px

img
  display: block
  margin: 0 auto
  max-width: 100%

.posts
  .post
    border: none
    &:first-child
      margin-top: 0
  .post-container
    margin: 0em auto 1em
    max-width: 800px
    border: 1px solid color-border
    box-shadow: 0 0 2px color-border
  .post-image
    background: #ccc
    margin: 0
    padding: 0
    min-height: 100px
    width: 100%
    img
      height: 100%
  .post-title
    font-size: 1em
    .post-title-link
      color: #368CCB
      text-decoration: none
  .post-content
    a
      color: inherit;
      text-decoration: none
      p:first-child
        font-size: font-size
      &:hover
        text-decoration: underline
  .post-meta
    color: #BABABA