.header {
  padding: 1em 0;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
  display: flex
  align-items: baseline
  justify-content: space-between
  .blog-title .logo {
    color: #AAA;
    font-size: 1.5em;
    font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
    text-decoration: none;
    margin-left: 10px;
  }
  .menu {
    margin: 0;
    padding: 0;
    .menu-item {
      display: inline-block;
      margin-right: 10px;
    }
    .menu-item-link {
      color: #AAA;
      text-decoration: none;
      &:hover {
        color: #368CCB;
      }
    }
  }
}